rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isValidGroupName(name) {
      return name is string &&
             name.size() > 0 &&
             name.size() <= 12;
    }

    // supplements コレクションに対するルール
    match /supplements/{supplementId} {
      // 認証済みのユーザーのみがドキュメントの作成を許可
      allow create: if request.auth.uid != null &&
                    request.resource.data.userId == request.auth.uid;

      // 自分のデータのみ読み書き可能
      allow read, update, delete: if request.auth.uid != null &&
                                   resource.data.userId == request.auth.uid;
    }

    // supplementGroups コレクションに対するルール
    match /supplementGroups/{groupId} {
      allow create: if request.auth.uid != null &&
                    request.resource.data.userId == request.auth.uid &&
                    isValidGroupName(request.resource.data.name) &&
                    request.resource.data.keys().hasOnly([
                      "name",
                      "userId",
                      "createdAt"
                    ]);

      allow read, delete: if request.auth.uid != null &&
                          resource.data.userId == request.auth.uid;

      allow update: if request.auth.uid != null &&
                    resource.data.userId == request.auth.uid &&
                    request.resource.data.userId == resource.data.userId &&
                    request.resource.data.createdAt == resource.data.createdAt &&
                    isValidGroupName(request.resource.data.name) &&
                    request.resource.data.keys().hasOnly([
                      "name",
                      "userId",
                      "createdAt"
                    ]);
    }
  }
}
